package day4;
/**
 * «∂Ã◊for—≠ª∑,µ›πÈ
 * @author Tedu
 *
 */

public class Linked_for_loop {
	/**
	 * µ›πÈ,¥Ú”°Ω◊÷À˛
	 * @param i
	 * @return
	 */
	public static String recursion(int i) {
		if(i==1) return("*");
		for(int j=i; j>0; j--) {
			System.out.print("*");
		}
		System.out.println("");
		return recursion(i-1);
	}
	
	/**
	 * µ›πÈ£¨¥Ú”°≥À∑®±Ì
	 * @param args
	 */
	
	public static String timeTable(int i) {
		if(i == 0) return "\n";
		for(int j=1; j<=(10-i); j++) {
			System.out.print(j + "*" + (10-i) + "=" + j*(10-i) + "; ");
		}
		System.out.println();
		return timeTable(i-1);
	}
	
	public static String recursiveTable(int i) {
		if(i == 0) return "\n";
		for(int j=1; j<=i; j++) {
			System.out.print(j + "*" + i + "=" + j*i + "; ");
		}
		System.out.println();
		return recursiveTable(i-1);
	}
	
	public static void main(String[] args) {
		//System.out.println(recursion(10));
		System.out.println(timeTable(10));
		System.out.println(recursiveTable(10));
	}
}
