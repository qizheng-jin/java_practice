package day4;
/**
 * 嵌套for循环,递归
 * @author Tedu
 *
 */

public class Linked_for_loop {
	/**
	 * 递归,打印金字塔
	 * @param i
	 * @return
	 */
	public static String recursion(int i) {
		if(i==1) return("*");
		for(int j=i; j>0; j--) {
			System.out.print("*");
		}
		System.out.println("");
		return recursion(i-1);
	}
	
	/**
	 * 递归，打印乘法表
	 * @param args
	 */
	
	public static String timeTable(int i) {
		if(i == 1) return 1+"\n";
		for(int j=1; j<i; j++) {
			System.out.print(j + "*" + i + "=" + j*i + "; ");
		}
		System.out.println();
		return timeTable(i-1);
	}
	
	public static String recursionTable(int i) {
		if(i == 9) {
			return "到头了";
		}
		for(int j=1; j<=(9-i); j++) {
			System.out.print(j + "*" + i + "=" + j*i + "; ");
		}
		System.out.println("");
		return recursionTable(i--);
	}
	
	public static void main(String[] args) {
		//System.out.println(recursion(10));
		System.out.println(timeTable(9));
		//System.out.println(recursionTable(10));
	}
}
