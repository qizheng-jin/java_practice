package day4;
/**
 * Ç¶Ì×forÑ­»·,µİ¹é
 * @author Tedu
 *
 */

public class Linked_for_loop {
	/**
	 * µİ¹é,´òÓ¡½ğ×ÖËş
	 * @param i
	 * @return
	 */
	public static String recursion(int i) {
		if(i==1) return("*");
		for(int j=1; j<=i; j++) {
			System.out.print("*");
		}
		System.out.println("");
		return recursion(i-1);
	}
	
	/**
	 * µİ¹é£¬´òÓ¡³Ë·¨±í
	 * @param args
	 */
	
	public static String timeTable(int i) {
		if(i == 1) return "1*1=1";
		for(int j=1; j<=(10-i); j++) {
			System.out.print(j + "*" + (10-i) + "=" + j*(10-i) + "; ");
		}
		System.out.println();
		return timeTable(i-1);
	}
	
	public static String recursiveTable(int i) {
		if(i == 0) return "\n";
		for(int j=1; j<=i; j++) {
			System.out.print(j + "*" + i + "=" + j*i + "; ");
		}
		System.out.println();
		return recursiveTable(i-1);
	}
	
	public static void main(String[] args) {
		//System.out.println(recursion(10));
		System.out.println(timeTable(8));
		System.out.println(recursiveTable(9));
	}
}
